<?xml version="1.0"?>
<configuration xmlns:patch="http://www.sitecore.net/xmlconfig/" xmlns:set="http://www.sitecore.net/xmlconfig/set/">
  <sitecore>

    <!--Pipeline start-->
    <pipelines>
      <httpRequestBegin>
        <processor type="SitecoreCookbook.Pipelines.PageNotFoundResolver,SitecoreCookbook"  patch:after="processor[@type='Sitecore.Pipelines.HttpRequest.ItemResolver,Sitecore.Kernel']">
        </processor>
      </httpRequestBegin>
    </pipelines>
    <!--Pipeline end-->
    <!--Event starts-->
    <events>
      <event name="item:saved">
        <handler type="SitecoreCookbook.Handlers.ItemPublishEventHandler,SitecoreCookbook" method="OnItemSaved" />
      </event>
    </events>
    <!--Event ends-->
    <!--Link mangers-->
    <linkManager>
      <providers>
        <add name="link-pattern-1" type="Sitecore.Links.LinkProvider, Sitecore.Kernel" addAspxExtension="false" languageLocation="filePath" />
        <add name="link-pattern-2" type="Sitecore.Links.LinkProvider, Sitecore.Kernel" addAspxExtension="true"  languageLocation="queryString" />
      </providers>
    </linkManager>
    <!--Link mangers end-->
    <!--Site start-->
    <sites>
      <site name="SitecoreStaging"
            enableTracking="true"
            virtualFolder="/"
            physicalFolder="/"
            rootPath="/sitecore/content"
            startItem="/home"
            language="en"
            database="master"
            domain="extranet"
            hostName="staging.sitecorecookbook.com"
            allowDebug="true"
            cacheHtml="true"
            htmlCacheSize="50MB"
            registryCacheSize="0"
            viewStateCacheSize="0"
            xslCacheSize="25MB"
            filteredItemsCacheSize="10MB"
            enablePreview="true"
            enableWebEdit="true"
            enableDebugger="true"
            disableClientData="false"
            cacheRenderingParameters="true"
            renderingParametersCacheSize="10MB"
            patch:before="site[@name='website']"
            linkProvider="link-pattern-1"
      />
      <site name="SitecoreLive"
                  enableTracking="true"
                  virtualFolder="/"
                  physicalFolder="/"
                  rootPath="/sitecore/content"
                  startItem="/home"
                  language="en"
                  database="web"
                  domain="extranet"
                  hostName="www.sitecorecookbook.com"
                  allowDebug="true"
                  cacheHtml="true"
                  htmlCacheSize="50MB"
                  registryCacheSize="0"
                  viewStateCacheSize="0"
                  xslCacheSize="25MB"
                  filteredItemsCacheSize="10MB"
                  enablePreview="true"
                  enableWebEdit="true"
                  enableDebugger="true"
                  disableClientData="false"
                  cacheRenderingParameters="true"
                  renderingParametersCacheSize="10MB"
                  patch:before="site[@name='website']"
                  linkProvider="link-pattern-2"
      />
    </sites>
    <cacheSizes>
      <sites>
        <SitecoreStaging>
          <html>80MB</html>
          <registry>0</registry>
          <viewState>0</viewState>
          <xsl>25MB</xsl>
        </SitecoreStaging>
        <SitecoreLive>
          <html>70MB</html>
          <registry>0</registry>
          <viewState>0</viewState>
          <xsl>25MB</xsl>
        </SitecoreLive>
      </sites>
    </cacheSizes>
    <!--Site end-->
    <!--Command-->
    <commands>
      <command name="item:getchildcount" type="SitecoreCookbook.Commands.GetChildCount,SitecoreCookbook" patch:after="command[@name='item:workflow']"/>
    </commands>
    <!--Command end-->
  </sitecore>
</configuration>
