@model RenderingModel
@using Sitecore.Data.Fields

<div class="jumbotron">
    <h1  class="header"><a href="/">@Html.Sitecore().Field("Heading", Model.Item)</a></h1>

    @{
        ImageField backgroundImage = (ImageField)Model.Item.Fields["Background Image"];
        var imageUrl = Sitecore.Resources.Media.MediaManager.GetMediaUrl(backgroundImage.MediaItem);
    }
</div>
<style>

    .jumbotron{
        background-image:url(@imageUrl )
    }

    .header a{
        color:#b4b4b4;
        text-decoration: none;
    }
    .header a:hover{
        color:#b4b4b4;
        text-decoration: none;
    }

    .header{
       text-align: center;
    }

</style>